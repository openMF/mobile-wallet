<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_casual_list_icon"
        android:layout_width="@dimen/listImageSize"
        android:layout_height="@dimen/listImageSize"
        android:layout_marginStart="@dimen/marginItemsInSectionSmall"
        android:layout_marginLeft="@dimen/marginItemsInSectionSmall"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_casual_list_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_casual_list_title"
        app:srcCompat="@drawable/ic_transaction" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_subtitle" />

    <TextView
        android:id="@+id/tv_item_casual_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginItemsInSectionSmall"
        android:layout_marginLeft="@dimen/marginItemsInSectionSmall"
        android:layout_marginTop="@dimen/marginItemsInSectionSmall"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/textBody1"
        app:layout_constraintStart_toEndOf="@+id/iv_item_casual_list_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_casual_list_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorTextSecondary"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <TextView
        android:id="@+id/tv_item_casual_list_optional_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/marginItemsInSectionSmall"
        android:layout_marginRight="@dimen/marginItemsInSectionSmall"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/textCaption"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_casual_list_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_casual_list_title" />


</androidx.constraintlayout.widget.ConstraintLayout>