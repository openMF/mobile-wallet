<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.screenHorizontalMargin"
    android:paddingVertical="@dimen/Mifos.DesignSystem.Spacing.screenVerticalMargin"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_click_profile_image_dialog_row"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/Mifos.DesignSystem.Spacing.CardInnerPadding">

        <ImageView
            android:baselineAligned="false"
            android:id="@+id/iv_click_image_picture"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_camera" />

        <TextView
            android:id="@+id/tv_click_image_picture"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:layout_width="wrap_content"
            android:text="@string/click_profile_picture" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_change_profile_image_dialog_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsMedium"
        android:padding="@dimen/Mifos.DesignSystem.Spacing.CardInnerPadding">

        <ImageView
            android:id="@+id/iv_change_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_photo_library" />

        <TextView
            android:id="@+id/tv_change_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:text="@string/change_profile_picture" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_remove_profile_image_dialog_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/Mifos.DesignSystem.Spacing.CardInnerPadding"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsMedium">

        <ImageView
            android:id="@+id/iv_remove_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_remove" />

        <TextView
            android:id="@+id/tv_remove_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:text="@string/remove_profile_picture" />

    </LinearLayout>

</LinearLayout>