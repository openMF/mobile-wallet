<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_debit_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/debit_card_number"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:nextFocusDown="@id/pe_month"
        android:nextFocusForward="@id/pe_month"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/pe_month"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="@string/mm"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusDown="@id/pe_year"
            android:nextFocusForward="@id/pe_year"
            android:nextFocusRight="@id/pe_year"
            android:textIsSelectable="false"
            app:pinLineStroke="1dp"
            app:pinLineStrokeSelected="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:layout_marginRight="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:gravity="bottom"
            android:text="@string/slash"
            style="@style/TextAppearance.Material3.HeadlineLarge"/>

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/pe_year"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            app:pinLineStroke="1dp"
            app:pinLineStrokeSelected="2dp"/>

    </LinearLayout>

</LinearLayout>