<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/pb_transaction_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            style="@style/Widget.Material3.LinearProgressIndicator" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/Mifos.DesignSystem.Spacing.CardInnerPadding"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_transaction_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsMedium"
                android:layout_toRightOf="@+id/iv_transaction_status"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_transaction_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Mifos.DesignSystem.TextStyle.PrimaryColorBody"/>

                <TextView
                    android:id="@+id/tv_transaction_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"/>

                <TextView
                    android:id="@+id/tv_receiptId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    style="@style/Mifos.DesignSystem.TextStyle.BodyLarger"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_transaction_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
                android:text="$100"
                style="@style/Mifos.DesignSystem.TextStyle.Heading"/>

        </RelativeLayout>

        <View
            android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.screenHorizontalMargin"
            android:layout_marginVertical="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            style="@style/Mifos.DesignSystem.Components.HorizontalSpacer"/>

        <RelativeLayout
            android:id="@+id/rl_from_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.screenHorizontalMargin"
            android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fromImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_person"/>

                <TextView
                    android:id="@+id/tv_fromClientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/client_name"
                    />

                <TextView
                    android:id="@+id/tv_fromAccountNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/account"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_send"
                android:foregroundGravity="center"/>

            <LinearLayout
                android:id="@+id/ll_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_toImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_person"/>

                <TextView
                    android:id="@+id/tv_toClientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/client_name"
                    />

                <TextView
                    android:id="@+id/tv_toAccountNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/account"
                    />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/v_rule2"
            style="@style/Mifos.DesignSystem.Components.HorizontalSpacer"
            android:layout_marginVertical="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.screenHorizontalMargin"
            android:visibility="visible"/>

        <Button
            android:id="@+id/tv_viewReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/Mifos.DesignSystem.Spacing.screenVerticalMargin"
            style="@style/Mifos.DesignSystem.Components.Button.Text"
            android:text="@string/view_receipt" />

    </LinearLayout>

</FrameLayout>