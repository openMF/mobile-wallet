<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.screenHorizontalMargin"
    android:paddingVertical="@dimen/Mifos.DesignSystem.Spacing.screenVerticalMargin">

    <ImageView
        android:id="@+id/iv_shape_bottom_sheet_dialog_grip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shape_bottom_sheet_dialog_grip" />

    <TextView
        android:id="@+id/dialog_home_bottom_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
        android:text="@string/account_details"
        style="@style/Mifos.DesignSystem.TextStyle.BottomSheetTitle"/>

    <include
        android:id="@+id/inc_account_details_email"
        layout="@layout/item_casual_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsLarge" />

    <include
        android:id="@+id/inc_account_details_vpa"
        layout="@layout/item_casual_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.BetweenListCardItemsHalf" />

    <include
        android:id="@+id/inc_account_details_mobile_number"
        layout="@layout/item_casual_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.BetweenListCardItemsHalf" />

    <Button
        android:id="@+id/btn_profile_bottom_sheet_action"
        style="@style/Mifos.DesignSystem.Components.Button.Outline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenSections"
        android:text="@string/edit_profile" />

</LinearLayout>