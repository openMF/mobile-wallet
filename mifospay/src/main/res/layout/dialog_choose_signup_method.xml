<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.screenHorizontalMargin"
    android:paddingVertical="@dimen/Mifos.DesignSystem.Spacing.screenVerticalMargin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:id="@+id/btn_merchant"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsLarge"
            android:layout_width="wrap_content"
            android:text="@string/sign_up_as_merchant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:id="@+id/btn_customer"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenSectionsHalf"
            android:layout_width="wrap_content"
            android:text="@string/sign_up_as_customer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <CheckBox
            android:buttonTint="?attr/colorPrimary"
            android:checked="true"
            android:id="@+id/cb_google_account"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsLarge"
            android:layout_width="wrap_content"
            android:text="@string/ease_my_sign_up_using_google_account"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_customer"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:contentDescription="@string/grip"
            android:id="@+id/imageView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shape_bottom_sheet_dialog_grip" />

        <TextView
            android:id="@+id/textView5"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.marginWords"
            android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenSectionsHalf"
            android:layout_width="wrap_content"
            android:text="@string/or"
            app:layout_constraintEnd_toStartOf="@+id/divider2"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/btn_merchant" />

        <TextView
            style="@style/Mifos.DesignSystem.TextStyle.BottomSheetTitle"
            android:id="@+id/textView4"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
            android:layout_width="wrap_content"
            android:text="@string/create_an_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <View
            android:background="?android:attr/listDivider"
            android:id="@+id/divider"
            style="@style/Mifos.DesignSystem.Components.HorizontalSpacer"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <View
            android:background="?android:attr/listDivider"
            android:id="@+id/divider2"
            style="@style/Mifos.DesignSystem.Components.HorizontalSpacer"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
