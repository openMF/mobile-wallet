<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_empty_no_transaction_history"
        android:layout_width="@dimen/Mifos.DesignSystem.Size.errorInfoImageSize"
        android:layout_height="@dimen/Mifos.DesignSystem.Size.errorInfoImageSize"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_error_state"
        android:contentDescription="@string/content_description_placeholder" />

    <TextView
        android:id="@+id/tv_empty_no_transaction_history_title"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsLarge"
        android:text="@string/error_oops"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_empty_no_transaction_history_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
        android:layout_marginBottom="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsLarge"
        android:text="@string/unexpected_error_subtitle"
        android:textAlignment="center"
        android:alpha="@dimen/alpha_low_emphasis"
        style="@style/TextAppearance.Material3.BodyMedium" />
</LinearLayout>