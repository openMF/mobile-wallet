<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_background</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>


</resources>
